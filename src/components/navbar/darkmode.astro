---
const props = Astro.props;
---

<button {...props}>
  <svg
    class="w-5 text-transparent"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
    x-data={`{
      mode: DarkMode.mode,
      titles: {
        dark: 'Dark mode',
        light: 'Light mode',
        pc: 'Browser mode',
      },
      toggle() {
        DarkMode.toggle();
        this.mode = DarkMode.mode;
        document.documentElement.classList.toggle('dark', DarkMode.enabled);
      },
    }`.replace(/\s\s+/g, ' ')}
    @click="toggle"
  >
    <title x-text="titles[mode]" />
    <path id="pc" class="transition-colors" :class="{'text-primary': mode === 'pc'}" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" />
    <path id="dark" class="transition-colors" :class="{'text-primary': mode === 'dark'}" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" />
    <path id="light" class="transition-colors" :class="{'text-primary': mode === 'light'}" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" />
  </svg>
</button>
