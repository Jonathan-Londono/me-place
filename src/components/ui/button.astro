---
import { sizes, Size, Style, getStyles } from './buttons.shared';
interface Props {
  size?: Size;
  block?: boolean;
  style?: Style | Style[];
  class?: string;
  tag?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  tag: Tag = 'button',
  ...rest
} = Astro.props;
---

<Tag
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    getStyles(style),
    className,
  ]}
>
  <slot />
</Tag>
